@model Board.Data.Post

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Post</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="BoardId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="BoardId" class="form-control" asp-items="ViewBag.boards"></select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DateBegin" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateBegin" class="form-control" />
                <span asp-validation-for="DateBegin" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateEnd" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateEnd" class="form-control" />
                <span asp-validation-for="DateEnd" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HeaderText" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="HeaderText" class="form-control" />
                <span asp-validation-for="HeaderText" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Important" />
                    <label asp-for="Important"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Text" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
